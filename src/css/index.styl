* {
  box-sizing:border-box
  -webkit-tap-highlight-color: transparent
}

body
  font-family: Georgia, serif
  touch-action: manipulation
  color: #666666
  background: #ECE9E6
  background: -webkit-linear-gradient(to right, #FFFFFF, #ECE9E6)
  background: linear-gradient(to right, #FFFFFF, #ECE9E6)


.game
  max-width: 400px
  //padding: 2rem
  margin: 0 auto
  text-align: center
  user-select: none
  filter: grayscale(0)
  transition: filter .8s ease-in-out, opacity .4s ease-in

  &Shuffle
    pointer-events: none
    opacity: .6
    filter: grayscale(1)

.puzzle
  width: 100%
  padding-bottom: 100%
  margin-bottom: 1.5rem
  position: relative

  .item
    position: absolute
    left: 0
    top: 0
    width: 25%
    height 25%
    margin: 0
    padding: 0
    border: none
    cursor: pointer
    background: transparent
    transition: transform 0.2s, filter 0.5s
    user-select: none
    -webkit-user-select: none

    &Val
      display: flex
      align-items: center
      justify-content: center
      width: 90%
      height: 90%
      margin: 4%
      box-shadow: 2px 2px 1px 0 rgba(0, 0, 0, .4)
      border-radius: 10%
      color: whitesmoke
      font-size: 1.6rem
      font-weight: bold
      background: #00b09b
      background: linear-gradient(to right, #00b09b, #22cbba)

      &:hover
        width: 92%
        height: 92%


  &Won
    .item
      filter: brightness(120%)

.button
  font-size: 14px
  padding: 0
  width: 4rem
  height: 4rem

  border: 2px solid #c0c0c0
  outline: none
  background-color: #f4f5f6
  border-radius: 10px
  box-shadow:  -3px -10px 17px #ffffff, -3px -5px 7px #ffffff, -8px 0px 12px #ffffff, 2px 4px 8px rgba(0,0,0,0.2)
  transition: .13s ease-in-out
  cursor: pointer

  &:active
    box-shadow: none
    .button__content
      box-shadow: none
    .button__text, .button__icon
      transform: translate3d(0px, 0px, 0px)

  &__content
    position: relative
    display: grid
    place-content: center
    width: 100%
    height: 100%
    box-shadow: inset 0px -8px 0px #dddddd, 0px -8px 0px #f4f5f6
    border-radius: 10px
    transition: .12s ease-in-out
    z-index: 1

  &__text
    transform:translate3d(0px, -4px, 0px)
    font-size: 1rem
    font-weight: bold
    background-color: #888888
    color: tomato
    text-shadow: 1px 1px 2px rgba(255,255,255,0.4)
    -webkit-background-clip: text
    -moz-background-clip: text
    background-clip: text
    transition: all .12s ease-in-out

    &:hover
      color: #ff3a15